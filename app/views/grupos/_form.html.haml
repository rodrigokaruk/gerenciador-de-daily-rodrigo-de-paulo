= simple_form_for(@grupo) do |f|
  - if @grupo.errors.any?
    #error_explanation
      %h2
        = pluralize(@grupo.errors.count, "error")
        prohibited this grupo from being saved:
      %ul
        - @grupo.errors.full_messages.each do |message|
          %li
            = message
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :lider
    %br
    = collection_select(:grupo, :lider, Pessoa.all, :id, :nome, prompt: true)
  .actions
    = f.submit
